{
  "name": "melotte-core",
  "version": "0.1.0",
  "description": "Docker for the dweb",
  "type": "module",
  "engines": {
    "node": ">= 16.13"
  },
  "devDependencies": {
    "@types/jest": "~27.4",
    "@types/node": "~16.11",
    "@types/orbit-db": "orbitdb/orbit-db-types",
    "@typescript-eslint/eslint-plugin": "~5.14",
    "@typescript-eslint/parser": "~5.14",
    "eslint": "~8.11",
    "eslint-config-prettier": "~8.5",
